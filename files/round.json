{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["name", "double_jeopardy_count", "points", "categories"],
  "properties": {
    "name": {
      "type": "string"
    },
    "double_jeopardy_count": {
      "type": "integer",
      "minimum": 0
    },
    "points": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "integer",
        "minimum": 0
      }
    },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "answers"],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "answers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type", "data", "description", "answer"],
              "properties": {
                "type": {
                  "type": "string"
                },
                "data": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "answer": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}